	//unsigned int i, v, r;
	int r;

    init_platform();

    xil_printf("\n\r%sHello Stream Coprocessor\n\r");

    char array[5] = {'maiaa'};
	unsigned int ch;

        //while(1){
           		int i = 0;
           		xil_printf("before\n");
           		do {
           			//ch = XUartLite_Recv(XPAR_AXI_UARTLITE_0_BASEADDR);

           			xil_printf("\n\r.%8x", array);
					putfsl(array, 0);
					getfsl(r, 0);
					xil_printf("\n\r_%08x", r);

           			array[i] = ch;
        			xil_printf("\n\rAds %i \n",i);

        			i++;
           		} while(i < 5);

           		//xil_printf("%s\n", array);
           		//xil_printf("after\n");
        //}

    xil_printf("\n\rDone!");

    cleanup_platform();
